{
	"name": "DF_RAW_TO_REPORT",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "DS_SQL_Users",
						"type": "DatasetReference"
					},
					"name": "userRawData"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "userCleanedData",
					"description": "Creating/updating the columns '_id,  role'"
				}
			],
			"scriptLines": [
				"source(output(",
				"          {_id} as string,",
				"          fullName as string,",
				"          email as string,",
				"          role as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     format: 'table') ~> userRawData",
				"userRawData derive({_id} = isNull({_id}),",
				"          role = isNull(role)) ~> userCleanedData"
			]
		}
	}
}